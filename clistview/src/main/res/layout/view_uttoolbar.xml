<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    style="@android:style/Widget.Material.Toolbar">

    <ImageButton
        android:id="@+id/imageButton_toolbar_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@android:style/Widget.Material.Toolbar.Button.Navigation"/>

    <TextView
        android:id="@+id/textView_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"/>

    <chris.com.clistview.UTSpinner
        android:id="@+id/spanner_toolbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ImageButton
        android:id="@+id/imageButton_toolbar_rightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="-16dp"
        android:layout_toLeftOf="@+id/imageButton_toolbar_more"
        style="@android:style/Widget.Material.Toolbar.Button.Navigation"/>

    <ImageButton
        android:id="@+id/imageButton_toolbar_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginRight="-6dp"
        android:src="@drawable/ic_overflow"
        style="@android:style/Widget.Material.Toolbar.Button.Navigation"/>

</RelativeLayout>