<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <chris.com.clistview.CToolbar
        android:id="@+id/state_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/colorPrimary"
        app:navigationMenu="@drawable/ic_action_back"
        app:rightMenu="@android:drawable/ic_menu_camera"
        app:moreMenu="新增,删除,修改"
        app:text="通用列表"
        app:textColor="#FFFFFF"/>

    <chris.com.clistview.CListView
        android:id="@+id/listAct_lv"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:divider="#CCCCCC"
        android:dividerHeight="1px"
        app:itemLayout="@layout/listview_list_item"
        app:mode="MultiChoice"
        app:actionMenus="复制,保存,删除"/>

</LinearLayout>