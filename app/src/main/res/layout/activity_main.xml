<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="chris.com.clistviewdemo.MainActivity">

    <chris.com.clistview.CToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/colorPrimary"
        app:text="通用列表"
        app:textColor="#FFFFFF"/>

    <chris.com.clistview.CListView
        android:id="@+id/mainAct_lv"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:divider="#CCCCCC"
        android:dividerHeight="1px"
        app:itemLayout="@layout/listview_main_item"
        app:actionMenus="复制,删除"
        app:mode="MultiChoice"/>
</LinearLayout>
